<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="noAnimTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="actionBarTheme">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MainButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/main_button_shape</item>
        <item name="android:layout_height">@dimen/mainButtonHeight</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="MainQuestion" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/main_question_shape</item>
        <item name="android:layout_height">@dimen/mainButtonHeight</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AnswerTv" parent="Widget.AppCompat.TextView">
        <item name="android:minHeight">@dimen/answerButtonHeight</item>
        <item name="android:textColor">@color/bodyTextColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AnswerEditTextInput" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/bodyTextColor</item>
        <item name="android:textStyle">italic</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="hintTextColor">@color/bodyTextColor</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="Hint" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/bodyTextColor</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/bodyText</item>
    </style>

    <style name="LargeHeaderText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/largeHeaderText</item>
    </style>

    <style name="BodyText" parent="Widget.AppCompat.TextView">
        <item name="android:lineSpacingExtra">@dimen/lineSpacing</item>
        <item name="android:textSize">@dimen/bodyText</item>
        <item name="android:textColor">@color/bodyTextColor</item>
    </style>

</resources>
